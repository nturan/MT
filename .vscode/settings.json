{
    "cmake.buildDirectory": "${workspaceFolder}/out/build",
    "cmake.configureOnOpen": true,
    "cmake.debugConfig": {
        "name" : "(gdb) Launch ttbar_NLO (Debug)",
        "type": "cppdbg",
        "request": "launch",
        "program": "${command:cmake.launchTargetPath}",
        "args": ["--calculateXS=lo", "--calls=1000000", "--histogram='PT(top) 50 0 1000','Y(top) 50 -4 4'"],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}",
        "console": "internalConsole",
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb",
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description":  "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    },
    "files.associations": {
        "complex": "cpp",
        "algorithm": "cpp",
        "memory": "cpp",
        "numeric": "cpp",
        "array": "cpp",
        "atomic": "cpp",
        "bit": "cpp",
        "*.tcc": "cpp",
        "bitset": "cpp",
